    "electron": "^33.0.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.26.0",
    "less": "^4.2.0",
    "prettier": "^3.3.2",
    "raw-loader": "^4.0.2",
    "vite": "^5.3.5",
    "vue": "^3.5.13"
